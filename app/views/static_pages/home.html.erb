<% provide(:title, "Welcome") %>
<!DOCTYPE html>
<html lang="en">

<head>
    <title><%= yield(:title) %></title>
</head>

<body>
    <div id="wrapper">
        <nav>
            <div class="navbar-default sidebar" role="navigation">
            <ul class="nav" id="side-menu">
            <li><%= link_to "Dashboard", static_pages_home_path %></li>
            <li><%= link_to "Your Courses", courses_path %></li>
            <li><%= link_to "Create New Course", new_course_path %></li>
            </ul>
            </div>
        </nav>
        
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Welcome to Peaches</h1></div>
            </div>
            
        <div class="row">
        <div class="col-lg-12">
            <div class="panel">
                <div id="homepageheading" class="panel-heading">
                Your Courses
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead><tr>
                                <th>Course Name</th>
                                <th>View</th>
                                <th>Grade</th></tr>
                            </thead>
                            <tbody>
                                <% @courses.each do |c| %><tr>
                                <td><%= c.name %></td>
                                <td><%= link_to 'Display Course', c %></td>
                         
                                <% x=0 %>
                                <% y=0 %>
                                <%weight = 0%>
                                <% c.grades.each do |p| %>
                                <%x = x + p.score/p.total*p.weight%>
                                <%y = y + p.weight%>
                                <% end %>
                                <% if y== 0 %>
                                    <div class = 'one'> N/A </div>
                                    <% else %>
                                    <div class = 'two'>
                                <% c= (x/y*100) %> </h4>
                                <td><%='%.2f' % c%> </td>

                    </div><% end %></tr><% end %>
                            </tbody>
                        </table>
            </div></div></div>
        </div></div></div></div>

</body>
</html>
